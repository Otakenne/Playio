<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Playio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1c1c1e</item>
        <item name="colorPrimaryVariant">#1c1c1e</item>
        <item name="colorOnPrimary">#1c1c1e</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E2374D</item>
        <item name="colorSecondaryVariant">#E2374D</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Colors -->
        <item name="defaultColor">#1c1c1e</item>
        <item name="defaultColorSecondary">#242426</item>
        <item name="defaultTextColor">@color/white</item>
        <item name="toolbar_color">#1c1c1e</item>
        <item name="accent_color">#E2374D</item>
        <item name="separator_view_color">#BFD6D5</item>
        <item name="picture_background_color">#B8B8D6</item>

        <!-- Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/airbnbcerealbook</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="WelcomeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="HomeSellerTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="HeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ViewMoreTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FragmentHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?defaultTextColor</item>
    </style>
</resources>